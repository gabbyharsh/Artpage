<% layout('layouts/boilerplate') %>
<h1>All Arts</h1>
<div>
    <a href="/arts/new">Add Art</a>
</div>
<% for (let art of arts) {%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= art.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= art.title %></h5>
                    <p class="card-text"><%= art.description %></p>
                    <a class="btn btn-primary" href="/arts/<%= art._id%>">View <%= art.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

   